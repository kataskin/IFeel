    footer.page-footer
      .page-footer__info
        span.page-footer__info-tel P +64 9555 555
        span.page-footer__info-tel F +64 9555 555
        a.page-footer__info-mail E info@email.com
        span.page-footer__info-title Address
        a.page-footer__info-link(href='#') http://www.lipsum.com/feed/html

      .page-footer__nav
        mixin page-footer__nav-list(list)
          ul.page-footer__nav-list
            each item in list
              li.page-footer__nav-item-title
                input.page-footer__checkbox(id=item.id type='checkbox')
                label.page-footer__nav-title(for=item.id)= item.title
                +page-footer__nav-item-list (item.items)

        mixin page-footer__nav-item-list(list)
          ul.page-footer__nav-item-list
            each item in list
              li.page-footer__nav-item
                a.page-footer__nav-link(href='#')= item

        +page-footer__nav-list ([{
          title: 'Services',
          id: 'services',
          items: [
            'Commercial',
            'Distribution',
            'Gas',
            'Generation',
            'Industrial',
            'Telecomms',
            'Transmission',
            'Water'
          ]
        }, {
          title: 'Markets',
          id: 'markets',
          items: [
            'Commercial',
